from math import*

def Calculator():
    #вводим конст
    IstGarum = 3
    IstPlat = 2
    PlakGar = 2.038
    PlakPlat = 0.241
    #расчёты
    #самая длинная стена
    if (IstGarum<IstPlat):
        print("Garāka siena ir",IstPlat)
    else:
        print("Garāka siena ir",IstGarum)
    #Сколько штук в упаковке
    pieces = round(1.96/(PlakGar*PlakPlat))
    print("Pākā plaksnes gab. =>", pieces)
    #Сколько пластин нужно?
    vajag = int((IstGarum*IstPlat) / (PlakGar*PlakPlat))
    print("Plāksnes gab. =>", vajag)
    #сколько упаковок нужно
    upakov = int(6 / 1.92)
    print("Vajag", upakov, "pakās gab.")
Calculator()
